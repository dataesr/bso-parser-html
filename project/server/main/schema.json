{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Publication metadata",
    "description": "Schema for publications metadata",
    "type": "object",
    "properties": {
        "sources": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["pubmed", "html"]
	    }
        },
        "domains": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["health"]
	    }
        },
        "doi": {
            "type": "string",
            "pattern": "^10\\.*"
        },
        "external_ids": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id_type": {
                        "type": "string"
                    },
                    "id_value": {
                        "type": "string"
                    }
                },
                "required": ["id_type", "id_value"]
            }
        },
        "title": {
            "type": "string"
        },
        "incipit": {
            "type": "string"
        },
        "presentation": {
            "type": "string"
        },
        "publisher": {
            "type": "string"
        },
        "conference_title": {
            "type": "string"
        },
        "conference_location": {
            "type": "string"
        },
        "lang": {
            "type": "string",
            "minLength": 2
        },
        "abstract": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "abstract": {
                        "type": "string"
		    },
		    "lang": {
			"type": "string"
		    }
		}
	    }
        },
        "references": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "reference": {
                        "type": "string"
		    },
                    "doi": {
                        "type": "string",
                        "pattern": "^10\\.*"
		    },
		    "link": {
			"type": "string",
                        "format": "uri"
		    }
		}
	    }
        },
        "images": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
		    "url": {
			"type": "string",
                        "format": "uri"
		    }
		}
	    }
        },
        "publication_year": {
            "type": "string",
            "format": "date",
            "minLength": 4,
            "maxLength": 4

        },
        "publication_types": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "authors": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "last_name": {
                        "type": "string"
                    },
                    "first_name": {
                        "type": "string"
                    },
                    "orcid": {
                        "type": "string",
                        "pattern": "^(\\d{4}-){3}\\d{3}[0-9X]$"
                    },
                    "hal_id": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "corresponding": {
                        "type": "boolean"
                    },
                    "external_ids": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id_type": {
                                    "type": "string"
                                },
                                "id_value": {
                                    "type": "string"
                                }
                            },
                            "required": ["id_type", "id_value"]
                        }
                    },
                    "full_name": {
                        "type": "string"
                    },
                    "author_position": {
                        "type": "integer"
                    },
                    "affiliations": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "country": {
                                    "type": "string"
                                },
                                "city": {
                                    "type": "string"
                                },
                                "postal-code": {
                                    "type": "string"
                                },
                                "address-line": {
                                    "type": "string"
                                },
                    		"detected_countries": {
                        	    "type": "array",
                                    "items": {
                                        "type": "string"
				    }
				},
                    		"grid": {
                        	    "type": "array",
                                    "items": {
                                        "type": "string"
				    }
				},
                    		"external_ids": {
                        	    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id_type": {
                                                "type": "string"
                                            },
                                            "id_value": {
                                                "type": "string"
                                            }
                                        },
                                        "required": ["id_type", "id_value"]
                                    }
                                }
                            }
                        }
                    }
                },
                "additionalProperties": false,
                "required": ["full_name"]
            }
        },
        "detected_countries": {
            "type": "array",
            "items": {
                "type": "string"
	    }
	},
        "affiliations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "country": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "postal-code": {
                        "type": "string"
                    },
                    "address-line": {
                        "type": "string"
                    },
                    "detected_countries": {
                        "type": "array",
                            "items": {
                                "type": "string"
			}
		    },
                    "grid": {
                        "type": "array",
                            "items": {
                                "type": "string"
			}
		    },
                    "external_ids": {
                        "type": "array",
                         "items": {
                             "type": "object",
                             "properties": {
                                  "id_type": {
                                      "type": "string"
                                  },
                                  "id_value": {
                                      "type": "string"
                                  }
			     },
                              "required": ["id_type", "id_value"]
                        }
                    }
                },
                "additionalProperties": false,
                "required": ["name"]
            }
        },
        "keywords": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "keyword": {
                        "type": "string"
		    },
		    "lang": {
			"type": "string"
		    }
		}
	    }
        },
        "footnotes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "footnote": {
                        "type": "string"
		    }
		}
	    }
        },
        "acknowledgments": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "acknowledgments": {
                        "type": "string"
		    }
		}
	    }
        },
        "classifications": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string"
		    },
		    "code": {
			"type": "string"
		    },
		    "reference": {
			"type": "string"
		    }
		}
	    }
        },
        "fundings": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "funding": {
                        "type": "string"
		    }
		}
	    }
        },
        "url": {
            "type":  "string",
            "format": "uri"
        },
        "pmid": {
            "type": "string",
            "pattern": "^\\d{8}$"
        },
        "mesh_headings": {
            "type": "array"
        },
        "databank": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "accession_numbers": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "accession_number": {
                                    "type": "string"
                                }
                            },
                            "required": ["accession_number"]
                        }
                    }
                },
                "additionalProperties": false,
                "required": ["name", "accession_numbers"]
            }
        },
        "grants": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "grant": {
                        "type": "string"
                    },
                    "grantid": {
                        "type": "string"
                    },
                    "agency": {
                        "type": "string"
                    },
                    "country": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "has_grant": {
            "type": "boolean"
        },
        "coi": {
            "type": "string"
        },
        "issn_print": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{3}[0-9X]$"
        },
        "issn_electronic": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{3}[0-9X]$"
        },
        "journal_title": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "patternProperties": {
        "_date$": { 
            "type": "string",
            "format": "date"
	}
    },
    "required": ["sources", "url"]
}
